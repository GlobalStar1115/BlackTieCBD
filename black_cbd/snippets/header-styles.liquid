
<style>
  header-drawer {
    justify-self: start;
  }

  @media screen and (min-width: 990px) {
    header-drawer {
      display: none;
    }
  }
mega-menu mega-submenu
  .menu-drawer-container {
    display: flex;
    margin-left: 2rem;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  .list-menu--inline li {
    padding-right: 3rem;
  }

  .mega-menu > summary {
    column-gap: 1rem;
  }

  .mega-menu > summary > .icon {
    position: unset;
  }

  .mega-menu__list li {
    padding-bottom: 0; /* 1.1 */
    display: flex;
    align-items: end;
  }

  .list-menu--inline li:last-of-type {
    padding-right: 0;
  }

  .list-menu--inline li a ,
  .list-menu--inline li span {
    font-size: 1.6rem;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.37;
    letter-spacing: normal;
    text-align: left;
  }



  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
  }

  .list-menu__item--link {
    text-decoration: none;
    padding-bottom: 1rem;
    padding-top: 1rem;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
  }

  @media screen and (min-width: 750px) {
    .list-menu__item--link {
      padding-bottom: 0.5rem;
      padding-top: 0.5rem;
    }
  }
</style>

{%- style -%}
  #Header-{{ section.id }},
  .header-wrapper,
  #Header-{{ section.id }} .mega-menu .mega-menu__content {
    background: {{ section.settings.color_background }};
    color: {{ section.settings.text_color }};
  }
  #Header-{{ section.id }} .header__icon--menu,
  #Header-{{ section.id }} li a,
  #Header-{{ section.id }} .header__menu-item,
  #Header-{{ section.id }} .header__menu-item span,
  #Header-{{ section.id }} .header__icon  .icon-text  {
    color: {{ section.settings.text_color }};
    text-decoration: none;
  }
  #Header-{{ section.id }} .header__menu-item:hover,
  #Header-{{ section.id }} .header__menu-item:hover span,
  #Header-{{ section.id }} .header__menu-item span.active,
  #Header-{{ section.id }} li:hover > a,
  #Header-{{ section.id }} li:hover > summary > span,
  #Header-{{ section.id }} li.header__active-menu-item  span,
  #Header-{{ section.id }} .mega-menu[open] > summary > span {
    color: {{ section.settings.text_hover_color }};
    text-decoration: none;
  }

  #Header-{{ section.id }} li:hover > summary svg path,
  #Header-{{ section.id }} .mega-menu[open] > summary svg path {
    fill: {{ section.settings.text_hover_color }};
  }

  @media screen and (min-width: 750px) {
    #Header-{{ section.id }} .list-menu--inline li details,
    #Header-{{ section.id }} ul:not(.mega-menu__sublist) li:not(.header__active-menu-item) > a {
      border-bottom: 0.3rem solid transparent;
      transition: .5s;
    }

    #Header-{{ section.id }} .list-menu--inline li:active > header-menu > details, 
    #Header-{{ section.id }} .list-menu--inline li:hover > header-menu >  details,
    #Header-{{ section.id }} .list-menu--inline li.has-mega-menu > header-menu >  details[open],
    #Header-{{ section.id }} .list-menu--inline li.header__active-menu-item,
    #Header-{{ section.id }} ul:not(.mega-menu__sublist) li:not(.header__active-menu-item):hover > a {
      border-bottom: 0.3rem solid {{ section.settings.text_hover_color }};
    }
  }
  .section-header {
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
    background: {{ section.settings.color_background }};
  }

  @media screen and (min-width: 750px) {
    .section-header {
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }
  @media screen and (max-width: 989px) { 
    #Header-{{ section.id }} .cart-count-bubble {
      color: {{ section.settings.color_background }};
    }

    #Header-{{ section.id }} .menu-drawer,
    #Header-{{ section.id }} .menu-drawer__navigation,
    #Header-{{ section.id }} .menu-drawer__featured-items-wrap {
      background: {{ section.settings.mobile_color_background }};
    }

    #Header-{{ section.id }} li a,
    #Header-{{ section.id }} .menu-drawer__featured-items-wrap .menu-drawer__featured_title,
    #Header-{{ section.id }} .menu-drawer__featured-items .mega-menu_item a  {
      color: {{ section.settings.mobile_text_color }};
      background: {{ section.settings.mobile_color_background }};
    }

    #Header-{{ section.id }} li a:hover {
      color: {{ section.settings.mobile_text_hover_color }};
    }
    #Header-{{ section.id }} .menu-drawer__menu-item--active, #Header-{{ section.id }} .menu-drawer__menu-item:focus, 
    #Header-{{ section.id }} .menu-drawer__close-button:focus, #Header-{{ section.id }} .menu-drawer__menu-item:hover,
    #Header-{{ section.id }} .menu-drawer__close-button:hover {
      color: {{ section.settings.mobile_text_hover_color }};
      background: {{ section.settings.mobile_color_background }};
    }

    #Header-{{ section.id }}  .menu-drawer__utility-links li a {
      background: transparent;
    }
  }
{%- endstyle -%}



