{{ 'section-contact-us.css' | asset_url | stylesheet_tag }}

{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="s-mod-contact-us-{{ section.settings.classname }} contact-us page-width">
    {% if section.settings.heading_desktop %}
      <span  class="contact-us__heading--desktop">{{ section.settings.heading_desktop }}</span>
    {% endif %}
    {% if section.settings.heading_mobile %}
      <span  class="contact-us__heading--mobile">{{ section.settings.heading_mobile }}</span>
    {% endif %}
    <div class="contact-us__content">
      <div class="contact-us__content--subheading">{{ section.settings.subheading }}</div>
      <div class="contact-us__content--description">{{ section.settings.description }}</div>
    </div>
    <div class="contact-us__action">
      <a class="contact-us__action--button" href="tel:{{ section.settings.phone_no }}">
        {% render 'icon-phone', color: '#ffffff' %}
        {{ section.settings.call_us }}
      </a>
      <span class="contact-us__action--button">
        {% render 'icon-email', color: '#ffffff' %}
        {{ section.settings.chat_with_us }}
      </span>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.contact-us.name",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "classname",
      "label": "t:sections.all.classname.label"
    },
    {
      "type": "text",
      "id": "heading_desktop",
      "label": "t:sections.contact-us.settings.heading_desktop.label"
    },
    {
      "type": "text",
      "id": "heading_mobile",
      "label": "t:sections.contact-us.settings.heading_mobile.label"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:sections.contact-us.settings.subheading.label",
      "default": "Hours of Operation"
    },
    {
      "type": "text",
      "id": "description",
      "label": "t:sections.contact-us.settings.description.label",
      "default": "Weâ€™re here 10am - 6:30pm EST every day"
    },
    {
      "type": "text",
      "id": "call_us",
      "label": "t:sections.contact-us.settings.call_us.label",
      "default": "CALL US"
    },
    {
      "type": "text",
      "id": "phone_no",
      "label": "t:sections.contact-us.settings.phone_no.label"
    },
    {
      "type": "text",
      "id": "chat_with_us",
      "label": "t:sections.contact-us.settings.chat_with_us.label",
      "default": "CHAT WITH US"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "background-3",
          "label": "t:sections.all.colors.background_3.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-us.presets.name"
    }
  ]
}
{% endschema %}
